{
  "name": "xiaor-ai-assistant",
  "version": "1.1.2",
  "description": "小R助手",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron .",
    "nosil-start": "chcp 65001 >nul && electron . --no-single-instance-lock",
    "dev": "chcp 65001 >nul && cross-env NODE_ENV=development electron .",
    "build": "node build-script.js",
    "dist": "node build-script.js",
    "test": "node test-menu.js",
    "notlog-start": "set ELECTRON_NO_ATTACH_CONSOLE=1 && electron ."
  },
  "keywords": [
    "electron",
    "ai",
    "assistant"
  ],
  "author": "Ruanm",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "cnpm": "^9.4.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ruansystem.xiaor-ai-assistant",
    "productName": "小R助手",
    "icon": "RuanmAi.png",
    "protocols": [
      {
        "name": "xiaor",
        "role": "Viewer",
        "schemes": [
          "xiaor"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "RuanmAi.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "asar": "^3.2.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "node-fetch": "^3.3.2"
  }
}
