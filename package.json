{
  "name": "xiaor-ai-assistant",
  "version": "1.0.1",
  "description": "小R助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "node build-script.js",
    "dist": "node build-script.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build&run": "npx electron-builder --dir && start .\\dist\\win-unpacked\\小R - AI助手.exe"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant"
  ],
  "author": "Ruanm",
  "license": "MIT",
  "devDependencies": {
    "cnpm": "^9.4.0",
    "dmg-license": "^1.0.11",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ruansystem.xiaor-ai-assistant",
    "productName": "小R助手",
    "icon": "RuanmAi.png",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "RuanmAi.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "asar": "^3.2.0"
  }
}
